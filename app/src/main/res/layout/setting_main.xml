<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/header"
            android:layout_marginTop="80dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/user"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp"
    android:layout_marginTop="30dp"
    android:paddingHorizontal="20dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:minWidth="120dp"
        android:text="Username"/>
    <TextView
        android:id="@+id/deviceName"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/bbText"
        android:layout_height="wrap_content"
        android:text="name"/>
</LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/c_333333"/>

    <LinearLayout
        android:id="@+id/mySave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:layout_weight="1"
            android:text="My Favor"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@color/bbText"
            android:padding="5dp"
            android:textSize="18sp"
            android:minWidth="40dp"
            android:src="@drawable/arrow"/>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/c_333333"/>
    <LinearLayout
        android:id="@+id/modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      
        android:paddingVertical="15dp"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="Modify password"/>
        <ImageView
            android:id="@+id/shopName"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:textColor="@color/bbText"
            android:textSize="18sp"
            android:minWidth="40dp"
            android:src="@drawable/arrow"/>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/c_333333"/>

        <LinearLayout
            android:id="@+id/new_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"

            android:paddingHorizontal="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:layout_weight="1"
                android:text="Notice"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/bbText"
                android:padding="5dp"
                android:textSize="18sp"
                android:minWidth="40dp"
                android:src="@drawable/arrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/c_333333"/>

        <LinearLayout
            android:id="@+id/feedback_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:paddingHorizontal="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:layout_weight="1"
                android:text="FeedBack"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/bbText"
                android:padding="5dp"
                android:textSize="18sp"
                android:minWidth="40dp"
                android:src="@drawable/arrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/c_333333"/>
    <LinearLayout
        android:id="@+id/version_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
      
        android:paddingHorizontal="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="120dp"
            android:textSize="18sp"
            android:text="Version"/>
        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:textColor="@color/bbText"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="V1.0.2"/>
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="@color/c_333333"/>

        <LinearLayout
            android:id="@+id/about_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"

            android:paddingHorizontal="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:layout_weight="1"
                android:text="About"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/bbText"
                android:padding="5dp"
                android:textSize="18sp"
                android:minWidth="40dp"
                android:src="@drawable/arrow"/>
        </LinearLayout>
    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="45dp"
        android:background="@drawable/round_wihte_bg_blackborder"
        android:text="@string/exit"/>
</LinearLayout>
</ScrollView>
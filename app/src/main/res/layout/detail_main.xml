<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/header_in"
        layout="@layout/header"></include>
    <ScrollView
        android:layout_below="@id/header_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_below="@id/header_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:hint="请输入新密码"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/alias"
                android:hint="请输入新密码"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/come_in_key" />

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/info"
                android:hint="请输入要租的月数"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:inputType="number"
                android:layout_marginLeft="22dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/info2"
                android:text="总价"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="22dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/bt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="去支付"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:textSize="18sp"
                android:background="@drawable/round_wihte_bg_blackborder"
                android:textFontWeight="700"
                android:minWidth="100dp"

                android:textColor="@color/blue" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--阴影-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <!--前景-->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#2d2b2c"/>
            <corners android:radius="3dp" />
        </shape>
    </item>
</layer-list>